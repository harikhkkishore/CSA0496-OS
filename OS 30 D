#include <stdio.h>
#include <pthread.h>

void *thread_function(void *arg) {
    printf("Thread exiting...\n");
    pthread_exit(NULL);
}

int main() {
    pthread_t thread_id;
    pthread_create(&thread_id, NULL, thread_function, NULL);
    pthread_join(thread_id, NULL);
    printf("Main thread exiting...\n");
    pthread_exit(NULL);
}
